---
// Importa el logo desde assets
import logo from '../assets/icono.png';
import '@fontsource-variable/league-gothic';

---

<!-- Header superior -->
<header class="w-full relative z-40">
  <!-- Top Bar -->
  <div class="bg-gradient-to-r from-blue-600 to-blue-900 px-4 py-3 lg:py-2">
    <div class="max-w-7xl mx-auto flex items-center justify-between">
      <!-- Logo y Título -->
      <div class="flex items-center gap-2 cursor-pointer" onclick="window.location.href='/'">
        <div class="w-20 h-20 sm:w-12 sm:h-13 flex items-center flex-shrink-0">
          <img src={logo.src} alt="Logo Las Asambleas de Dios" class="w-full h-full object-contain mx-0 " />
        </div>
        <div class="hidden xs:block border-l border-white/50 h-14 mx-0 my-0"></div>
        <div class="text-white font-semibold text-sm sm:text-base lg:text-lg leading-tight">
          <span class="block">LADP</span>
          <span class="block -mt-0.5">REGIÓN HUAMANGA</span>
        </div>
      </div>

      <!-- Controles Derecha -->
      <div class="flex items-center gap-3 lg:gap-6">
        <!-- En Vivo - Solo visible en pantallas medianas+ -->
        <a href="https://www.facebook.com/ladpregionhuamanga" class="hidden md:flex items-center gap-2 text-white font-bold text-base lg:text-lg hover:scale-105 transition-transform duration-200 group">
          <div class="relative">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 lg:w-7 lg:h-7 group-hover:animate-pulse">
              <circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="2" fill="none"/>
              <circle cx="12" cy="12" r="9" stroke="currentColor" stroke-width="1.5" fill="none"/>
            </svg>
            <div class="absolute -top-1 -right-1 w-3 h-3 bg-red-500 rounded-full animate-pulse"></div>
          </div>
          <span class="hidden lg:inline">EN VIVO</span>
        </a>

        <!-- Redes Sociales (solo desktop/tablet) -->
        <div class="hidden sm:flex gap-2 items-center">
          <a href="https://www.facebook.com/ladpregionhuamanga" target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="bg-white/90 rounded-full p-1 hover:bg-blue-600 hover:scale-105 transition-all duration-200">
            <svg class="w-5 h-5 text-blue-700" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.522-4.477-10-10-10S2 6.478 2 12c0 5 3.657 9.127 8.438 9.877v-6.987h-2.54v-2.89h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.242 0-1.632.771-1.632 1.562v1.875h2.773l-.443 2.89h-2.33v6.987C18.343 21.127 22 17 22 12"/></svg>
          </a>
          <a href="" target="_blank" rel="noopener noreferrer" aria-label="YouTube" class="bg-white/90 rounded-full p-1 hover:bg-red-600 hover:scale-105 transition-all duration-200">
            <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 24 24"><path d="M21.8 8.001a2.75 2.75 0 0 0-1.94-1.94C18.07 6 12 6 12 6s-6.07 0-7.86.06a2.75 2.75 0 0 0-1.94 1.94C2 9.79 2 12 2 12s0 2.21.06 3.999a2.75 2.75 0 0 0 1.94 1.94C5.93 18 12 18 12 18s6.07 0 7.86-.06a2.75 2.75 0 0 0 1.94-1.94C22 14.21 22 12 22 12s0-2.21-.06-3.999zM10 15.5v-7l6 3.5-6 3.5z"/></svg>
          </a>
          
          <button class="bg-white/80 backdrop-blur-sm rounded-lg p-2 hover:bg-white hover:scale-105 transition-all duration-200 shadow-sm" title="Contacto">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-orange-700">
              <rect x="3" y="7" width="18" height="10" rx="2"/>
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 7l9 6 9-6" />
            </svg>
          </button>

        </div>


        <!-- Botón menú móvil -->
        <button 
          id="mobile-menu-toggle" 
          class="md:hidden flex items-center justify-center text-white p-1 rounded-md hover:bg-white/10 transition-colors"
          aria-label="Abrir menú de navegación"
        >
          <svg id="hamburger-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-7 h-7 transition-transform duration-200">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="close-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-7 h-7 hidden transition-transform duration-200">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Navbar Principal -->
  <nav class="bg-gradient-to-r from-yellow-400 via-orange-400 to-red-500 shadow-lg">
    <div class="max-w-7xl mx-auto px-4">
      <!-- Menu Desktop -->
      <div class="hidden md:flex items-center justify-between py-3">
        <ul class="flex gap-4 lg:gap-8 font-bold text-white text-sm lg:text-base">
          <li class="group relative">
            <button class="flex items-center gap-1 hover:text-blue-900 transition-colors duration-200 py-2">
              QUIÉNES SOMOS 
              <svg class="w-4 h-4 transition-transform duration-200 group-hover:rotate-180" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            <!-- Dropdown placeholder -->
            <div class="absolute top-full left-0 w-64 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="p-4 text-gray-700 text-sm">
                <p><a href="/nosotros" class="hover:text-blue-900 transition-colors duration-200 py-2 block">Acerca de Nosotros</a></p>
                <p><a href="/creemosEn" class="hover:text-blue-500 transition-colors duration-200 py-2 block">En que creemos</a></p>
                <p><a href="#" class="hover:text-blue-500 transition-colors duration-200 py-2 block">Legado</a></p>
                <p><a href="#" class="hover:text-blue-500 transition-colors duration-200 py-2 block">Areas de Accion</a></p> 
                <p><a href="#" class="hover:text-blue-500 transition-colors duration-200 py-2 block">Sectores</a></p>

              </div>
            </div>
          </li>
          <li><a href="/jer" class="hover:text-blue-900  transition-colors duration-200 py-2 block">JER</a></li>
          <li><a href="/ministerios" class="hover:text-blue-900 transition-colors duration-200 py-2 block">MINISTERIOS</a></li>
          <li><a href="/eventos" class="hover:text-blue-900  transition-colors duration-200 py-2 block">EVENTOS </a></li>
          <li><a href="/contacto" class="hover:text-blue-900  transition-colors duration-200 py-2 block">CONTACTO</a></li>
          <li><a href="#" class="hover:text-blue-900  transition-colors duration-200 py-2 block">DIESMOS Y OFRENDAS</a></li>
        </ul>
        

      </div>
    </div>
  </nav>

  <!-- Menú móvil -->
  <div id="mobile-menu-backdrop" class="fixed inset-0 z-50 bg-black/60 backdrop-blur-sm opacity-0 invisible md:hidden transition-all duration-300">
    <div id="mobile-menu-panel" class="absolute top-0 right-0 w-80 max-w-[85vw] h-full bg-gradient-to-b from-yellow-400 via-orange-400 to-red-500 shadow-2xl transform translate-x-full transition-transform duration-300">
      <!-- Header del menú móvil -->
      <div class="flex items-center justify-between px-6 py-4 border-b border-white/30 bg-black/10">
        <span class="font-bold text-xl text-white">MENÚ</span>
        <button id="mobile-menu-close" class="text-white p-1 rounded-md hover:bg-white/10 transition-colors" aria-label="Cerrar menú">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-7 h-7">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Enlaces del menú -->
      <div class="overflow-y-auto h-full pb-20">
        <!-- En Vivo para móvil -->
        <div class="px-6 py-4 border-b border-white/20">
          <a href="#" class="flex items-center gap-3 text-white font-bold text-lg">
            <div class="relative">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
                <circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="2" fill="none"/>
                <circle cx="12" cy="12" r="9" stroke="currentColor" stroke-width="1.5" fill="none"/>
              </svg>
              <div class="absolute -top-1 -right-1 w-3 h-3 bg-red-500 rounded-full animate-pulse"></div>
            </div>
            EN VIVO
          </a>
        </div>

        <ul class="px-6 py-4 space-y-1">
          <li>
            <!-- Enlace principal con botón para desplegar submenú -->
            <button type="button" class="flex items-center justify-between w-full py-3 text-white font-semibold text-lg border-b border-white/20 hover:text-yellow-100 transition-colors group" onclick="const submenu = this.nextElementSibling; submenu.classList.toggle('hidden'); this.querySelector('svg').classList.toggle('rotate-180');">
              QUIÉNES SOMOS
              <svg class="w-5 h-5 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            <!-- Submenú oculto por defecto -->
            <div class="hidden flex-col pl-4 py-2 bg-white/80 rounded-lg mt-1 shadow-inner text-gray-800 text-base">
              <a href="/nosotros" class="hover:text-blue-900  transition-colors duration-200 py-1 block">Acerca de Nosotros</a>
              <a href="/creemosEn" class="hover:text-blue-900  transition-colors duration-200 py-1 block">En que creemos</a>
              <a href="#" class="hover:text-blue-900  transition-colors duration-200 py-1 block">Legado</a>
              <a href="#" class="hover:text-blue-900  transition-colors duration-200 py-1 block">Areas de Acción</a>
              <a href="#" class="hover:text-yellow-600 transition-colors duration-200 py-1 block">Sectores</a>
            </div>
          </li>
          <li><a href="/jer" class="hover:text-blue-900  transition-colors duration-200 py-2 block">JER</a></li>
          <li><a href="/ministerios" class="hover:text-blue-900 transition-colors duration-200 py-2 block">MINISTERIOS</a></li>
          <li><a href="/eventos" class="hover:text-blue-900  transition-colors duration-200 py-2 block">EVENTOS </a></li>
          <li><a href="/contacto" class="hover:text-blue-900  transition-colors duration-200 py-2 block">CONTACTO</a></li>
          <li><a href="#" class="hover:text-blue-900  transition-colors duration-200 py-2 block">DIESMOS Y OFRENDAS</a></li>

        </ul>

        <!-- Iconos de acción móvil y redes sociales -->
        <div class="flex flex-col items-center gap-4 mt-8">
          <h1 class="text-white">Redes Sociales</h1>
          <!-- Redes Sociales en móvil -->
          <div class="flex justify-center gap-4">
            <a href="https://www.facebook.com/ladpoficial" target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="bg-white/90 rounded-full p-1 hover:bg-blue-600 hover:scale-110 transition-all duration-200">
              <svg class="w-7 h-7 text-blue-700" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.522-4.477-10-10-10S2 6.478 2 12c0 5 3.657 9.127 8.438 9.877v-6.987h-2.54v-2.89h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.242 0-1.632.771-1.632 1.562v1.875h2.773l-.443 2.89h-2.33v6.987C18.343 21.127 22 17 22 12"/></svg>
            </a>
            <a href="https://www.youtube.com/@ladpoficial" target="_blank" rel="noopener noreferrer" aria-label="YouTube" class="bg-white/90 rounded-full p-1 hover:bg-red-600 hover:scale-110 transition-all duration-200">
              <svg class="w-7 h-7 text-red-600" fill="currentColor" viewBox="0 0 24 24"><path d="M21.8 8.001a2.75 2.75 0 0 0-1.94-1.94C18.07 6 12 6 12 6s-6.07 0-7.86.06a2.75 2.75 0 0 0-1.94 1.94C2 9.79 2 12 2 12s0 2.21.06 3.999a2.75 2.75 0 0 0 1.94 1.94C5.93 18 12 18 12 18s6.07 0 7.86-.06a2.75 2.75 0 0 0 1.94-1.94C22 14.21 22 12 22 12s0-2.21-.06-3.999zM10 15.5v-7l6 3.5-6 3.5z"/></svg>
            </a>
          </div>
          <!-- Botón login en menú móvil -->
          <div class="flex justify-center mt-6 mb-4 md:hidden">
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Script para el menú móvil -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggleBtn = document.getElementById('mobile-menu-toggle');
    const closeBtn = document.getElementById('mobile-menu-close');
    const backdrop = document.getElementById('mobile-menu-backdrop');
    const panel = document.getElementById('mobile-menu-panel');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const closeIcon = document.getElementById('close-icon');
    
    let isOpen = false;
    
    function openMenu() {
      isOpen = true;
      if (backdrop && panel && hamburgerIcon && closeIcon) {
        backdrop.classList.remove('opacity-0', 'invisible');
        panel.classList.remove('translate-x-full');
        hamburgerIcon.classList.add('hidden');
        closeIcon.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      }
    }
    
    function closeMenu() {
      isOpen = false;
      if (backdrop && panel && hamburgerIcon && closeIcon) {
        backdrop.classList.add('opacity-0', 'invisible');
        panel.classList.add('translate-x-full');
        hamburgerIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        document.body.style.overflow = 'auto';
      }
    }
    
    toggleBtn?.addEventListener('click', () => {
      isOpen ? closeMenu() : openMenu();
    });
    
    closeBtn?.addEventListener('click', closeMenu);
    
    backdrop?.addEventListener('click', (e) => {
      if (e.target === backdrop) {
        closeMenu();
      }
    });
    
    // Cerrar menú con ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isOpen) {
        closeMenu();
      }
    });
    
    // Cerrar menú al redimensionar pantalla
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 768 && isOpen) {
        closeMenu();
      }
    });
  });
</script>

<style>
  /* Clases personalizadas para breakpoints extra pequeños */
  @media (min-width: 475px) {
    .xs\:block {
      display: block;
    }
  }
  
  /* Mejoras de rendimiento */
  #mobile-menu-panel {
    will-change: transform;
    backface-visibility: hidden;
  }
  
  /* Animaciones suaves */
  .group:hover .group-hover\:rotate-180 {
    transform: rotate(180deg);
  }
  
  /* Scrollbar personalizada para el menú móvil */
  #mobile-menu-panel::-webkit-scrollbar {
    width: 4px;
  }
  
  #mobile-menu-panel::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
  }
  
  #mobile-menu-panel::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 2px;
  }
  
  #mobile-menu-panel::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.5);
  }
</style>