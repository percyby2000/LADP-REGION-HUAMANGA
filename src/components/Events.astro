---
// Fecha del evento: 17 de octubre de 2025
const eventDate = new Date('2025-10-17T19:00:00').getTime();
---

<section class="w-full min-h-screen relative overflow-hidden">
  <!-- Imagen de fondo - Desktop -->
  <div class="absolute inset-0 z-0 hidden md:block bg-desktop-image bg-cover bg-center bg-no-repeat">
    <!-- Overlay para desktop -->
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-black/20 to-gray-900/80"></div>
  </div>

  <!-- Imagen de fondo - Móvil -->
  <div class="absolute inset-0 z-0 block md:hidden">
    <img 
      src="/eventoproximo.jpg" 
      alt="Evento Próximo Móvil" 
      class="w-full h-full object-cover object-center"
    />
    <!-- Overlay especial para móvil -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/60 to-black/90"></div>
    <!-- Elementos decorativos para móvil -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-10 left-10 w-3 h-3 bg-blue-400 rounded-full animate-pulse"></div>
      <div class="absolute top-20 right-16 w-2 h-2 bg-red-400 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
      <div class="absolute bottom-32 left-16 w-4 h-4 bg-yellow-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-40 right-12 w-3 h-3 bg-green-400 rounded-full animate-pulse" style="animation-delay: 1.5s;"></div>
    </div>
  </div>

  <!-- Contenedor principal -->
  <div class="relative z-10 min-h-screen flex flex-col justify-end pb-16 md:pb-20">

    <!-- Título del evento - Solo móvil -->
    <div class="block md:hidden text-center mb-8 px-6">
      <div class="inline-block bg-red-600/90 backdrop-blur-sm text-white px-4 py-2 rounded-full text-sm font-bold mb-4">
        FIESTA NACIONAL LADP
      </div>
      <h1 class="text-4xl font-black text-white mb-2 drop-shadow-2xl">
        ¡VEN Y CELEBRA!
      </h1>
      <div class="text-lg text-orange-300 font-bold">
        17 AL 19 DE OCTUBRE
      </div>
      <div class="text-sm text-blue-200 mt-2">
        Colegio Mariscal Cáceres
      </div>
    </div>

    <!-- Contador Principal -->
    <div class="w-full px-6">
      <div id="countdown-section" class="text-center">
        <!-- Grid del contador - Responsive -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-4 max-w-sm md:max-w-md mx-auto">
        
        <!-- Días -->
        <div class="countdown-card group">
          <div class="countdown-inner">
            <div id="days" class="countdown-number">00</div>
            <div class="countdown-label">Días</div>
          </div>
        </div>
        
        <!-- Horas -->
        <div class="countdown-card group">
          <div class="countdown-inner">
            <div id="hours" class="countdown-number">00</div>
            <div class="countdown-label">Horas</div>
          </div>
        </div>
        
        <!-- Minutos -->
        <div class="countdown-card group">
          <div class="countdown-inner">
            <div id="minutes" class="countdown-number">00</div>
            <div class="countdown-label">Minutos</div>
          </div>
        </div>
        
        <!-- Segundos -->
        <div class="countdown-card group">
          <div class="countdown-inner">
            <div id="seconds" class="countdown-number">00</div>
            <div class="countdown-label">Segundos</div>
          </div>
        </div>
        
      </div>
    </div>
  </div>

  <!-- Transmisión en Vivo -->
  <div id="live-section" class="live-hidden relative z-10 w-full h-full flex items-center justify-center px-6">
    <div class="w-full max-w-6xl mx-auto">
      <div class="text-center mb-6">
        <div class="inline-flex items-center gap-3 bg-red-600 backdrop-blur-sm text-white px-6 py-3 rounded-full shadow-lg">
          <div class="w-3 h-3 bg-red-300 rounded-full animate-pulse"></div>
          <span class="text-lg font-semibold">Transmisión en Vivo</span>
        </div>
      </div>
      
      <div class="bg-black/70 backdrop-blur-md rounded-2xl p-6 shadow-2xl">
        <div class="aspect-video bg-black rounded-xl overflow-hidden relative">
          <div id="stream-placeholder" class="flex items-center justify-center h-full text-white">
            <div class="text-center">
              <div class="w-16 h-16 border-4 border-white/30 border-t-white rounded-full animate-spin mx-auto mb-4"></div>
              <p class="text-lg">Conectando...</p>
            </div>
          </div>
          <iframe 
            id="live-stream" 
            class="w-full h-full" 
            style="display: none;" 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  // Configuración del contador regresivo
  const eventDate = new Date('2025-10-17T19:00:00').getTime();
  
  function updateCountdown() {
    const now = new Date().getTime();
    const distance = eventDate - now;
    
    if (distance > 0) {
      // Cálculos del tiempo restante
      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);
      
      // Actualizar el DOM con animación
      const daysEl = document.getElementById('days');
      const hoursEl = document.getElementById('hours');
      const minutesEl = document.getElementById('minutes');
      const secondsEl = document.getElementById('seconds');
      
      // Función para actualizar número con animación
      function updateNumber(element, newValue) {
        if (element && element.textContent !== newValue) {
          element.classList.add('number-change');
          element.textContent = newValue;
          setTimeout(function() {
            element.classList.remove('number-change');
          }, 600);
        } else if (element && !element.textContent) {
          element.textContent = newValue;
        }
      }
      
      updateNumber(daysEl, days.toString().padStart(2, '0'));
      updateNumber(hoursEl, hours.toString().padStart(2, '0'));
      updateNumber(minutesEl, minutes.toString().padStart(2, '0'));
      updateNumber(secondsEl, seconds.toString().padStart(2, '0'));
    } else {
      // El evento ha comenzado - mostrar transmisión en vivo
      showLiveStream();
    }
  }
  
  function showLiveStream() {
    const countdownSection = document.getElementById('countdown-section');
    const liveSection = document.getElementById('live-section');
    const streamPlaceholder = document.getElementById('stream-placeholder');
    const liveStreamIframe = document.getElementById('live-stream');
    
    if (countdownSection && liveSection) {
      // Ocultar contador y mostrar transmisión
      countdownSection.style.display = 'none';
      liveSection.classList.remove('live-hidden');
      
      // Simular carga de la transmisión (aquí pondrías la URL real de YouTube/Facebook Live)
      setTimeout(function() {
        if (streamPlaceholder && liveStreamIframe) {
          streamPlaceholder.style.display = 'none';
          liveStreamIframe.style.display = 'block';
          // Aquí pondrías la URL real de la transmisión en vivo
          // liveStreamIframe.src = 'https://www.youtube.com/embed/TU_ID_DE_VIDEO_EN_VIVO?autoplay=1';
        }
      }, 3000);
    }
  }
  
  // Verificar inmediatamente si el evento ya comenzó
  function checkEventStatus() {
    const now = new Date().getTime();
    if (eventDate <= now) {
      showLiveStream();
    } else {
      // Iniciar el contador regresivo
      updateCountdown();
      setInterval(updateCountdown, 1000);
    }
  }
  
  // Inicializar cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', checkEventStatus);
</script>

<style>
  /* Estilos del contador moderno y elegante */
  .countdown-card {
    position: relative;
    transform-style: preserve-3d;
    perspective: 1000px;
  }
  
  .countdown-inner {
    position: relative;
    padding: 1rem;
    border-radius: 1rem;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    
    /* Fondo con opacidad */
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.9) 0%, 
      rgba(255, 255, 255, 0.85) 100%);
    
    /* Backdrop blur */
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    
    /* Bordes y sombras más sutiles */
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 
      0 8px 25px -8px rgba(0, 0, 0, 0.25),
      0 0 0 1px rgba(255, 255, 255, 0.2);
  }
  
  .countdown-card:hover .countdown-inner {
    transform: scale(1.05);
    box-shadow: 
      0 35px 60px -12px rgba(0, 0, 0, 0.4),
      0 0 0 1px rgba(255, 255, 255, 0.3);
  }
  
  /* Efecto de brillo en hover */
  .countdown-inner::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.4),
      transparent
    );
    transition: left 0.6s ease;
  }
  
  .countdown-card:hover .countdown-inner::before {
    left: 100%;
  }
  
  .countdown-number {
    font-size: 1.8rem;
    font-weight: 900;
    margin-bottom: 0.25rem;
    line-height: 1;
    position: relative;
    z-index: 10;
    
    background: linear-gradient(135deg, 
      #1f2937 0%, 
      #374151 50%, 
      #1f2937 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    
    /* Sombra de texto sutil */
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .countdown-label {
    font-size: 0.7rem;
    font-weight: 600;
    color: #4b5563;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    position: relative;
    z-index: 10;
  }
  

  
  /* Efecto de escala en el cambio de número */
  .number-change {
    animation: numberPulse 0.6s ease-out;
  }
  
  @keyframes numberPulse {
    0% { 
      transform: scale(1); 
    }
    50% { 
      transform: scale(1.1);
      text-shadow: 0 0 20px rgba(59, 130, 246, 0.5);
    }
    100% { 
      transform: scale(1); 
    }
  }
  
  /* Estilos específicos para móvil */
  @media (max-width: 767px) {
    /* Contador más compacto en móvil */
    .countdown-inner {
      padding: 0.8rem;
      border-radius: 0.8rem;
      background: linear-gradient(135deg, 
        rgba(255, 255, 255, 0.95) 0%, 
        rgba(248, 250, 252, 0.9) 100%);
      box-shadow: 
        0 10px 30px -8px rgba(0, 0, 0, 0.3),
        0 0 0 1px rgba(255, 255, 255, 0.3);
    }
    
    .countdown-number {
      font-size: 1.6rem;
      margin-bottom: 0.2rem;
      background: linear-gradient(135deg, 
        #dc2626 0%, 
        #ea580c 50%, 
        #dc2626 100%);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    .countdown-label {
      font-size: 0.65rem;
      color: #374151;
      font-weight: 700;
    }
    
    /* Efectos especiales para móvil */
    .countdown-card:hover .countdown-inner {
      transform: scale(1.08);
      box-shadow: 
        0 15px 40px -10px rgba(220, 38, 38, 0.4),
        0 0 0 1px rgba(255, 255, 255, 0.4);
    }
  }

  /* Estilos para tablet */
  @media (min-width: 768px) and (max-width: 1023px) {
    .countdown-inner {
      padding: 1.1rem;
    }
    
    .countdown-number {
      font-size: 2rem;
    }
    
    .countdown-label {
      font-size: 0.75rem;
    }
  }

  /* Estilos para desktop */
  @media (min-width: 1024px) {
    .countdown-inner {
      padding: 1.5rem;
    }
    
    .countdown-number {
      font-size: 2.5rem;
    }
    
    .countdown-label {
      font-size: 0.9rem;
    }
  }
  
  /* Clase para ocultar la transmisión en vivo */
  .live-hidden {
    display: none;
  }
  
  /* Gradiente radial para efecto de viñeta */
  .bg-gradient-radial {
    background: radial-gradient(circle at center, transparent 0%, transparent 60%, rgba(0, 0, 0, 0.4) 100%);
  }
  
  /* Fondo de respaldo elegante */
  .bg-desktop-image {
    background-image: url('/ladpweb.svg');
  }

  /* Estilos específicos para el título móvil */
  @media (max-width: 767px) {
    h1 {
      text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
    }
    
    /* Animación sutil para elementos decorativos */
    .animate-pulse {
      animation: mobilePulse 2s infinite;
    }
    
    @keyframes mobilePulse {
      0%, 100% { 
        opacity: 0.4;
        transform: scale(1);
      }
      50% { 
        opacity: 0.8;
        transform: scale(1.2);
      }
    }
    
    /* Mejora del layout móvil */
    .mobile-grid {
      gap: 0.5rem;
    }
    
    /* Efectos de fondo para móvil */
    section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(circle at 20% 20%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(239, 68, 68, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 40% 60%, rgba(34, 197, 94, 0.1) 0%, transparent 50%);
      z-index: 1;
    }
  }
  
  /* Efecto de partículas de fondo (sutil) */
  .countdown-card::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 3px;
    height: 3px;
    background: linear-gradient(45deg, rgba(59, 130, 246, 0.2), rgba(147, 51, 234, 0.2));
    border-radius: 50%;
    transform: translate(-50%, -50%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .countdown-card:hover::after {
    opacity: 1;
    animation: particle 2s infinite;
  }
  
  @keyframes particle {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.2;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.3);
      opacity: 0.5;
    }
  }
</style>