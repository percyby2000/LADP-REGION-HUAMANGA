<script>
  // Funcionalidad para copiar coordenadas
  document.getElementById('copy-coordinates')?.addEventListener('click', function() {
    const coordinates = '-13.149785, -74.223906';
    navigator.clipboard.writeText(coordinates).then(function() {
      // Cambiar texto del botón temporalmente
      const button = document.getElementById('copy-coordinates');
      const originalText = button?.innerHTML;
      if (button) {
        button.innerHTML = `
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          ¡Copiado!
        `;
        
        setTimeout(() => {
          button.innerHTML = originalText || '';
        }, 2000);
      }
    });
  });

  // Funcionalidad para mapa en pantalla completa
  document.getElementById('fullscreen-map')?.addEventListener('click', function() {
    window.open('https://www.openstreetmap.org/directions?to=-13.149785%2C+-74.223906#map=18/-13.149787/-74.224845&layers=C', '_blank');
  });

  // Funcionalidad para zoom del plano
  document.getElementById('zoom-map')?.addEventListener('click', function() {
    const isMobile = window.innerWidth < 768;
    const mapUrl = isMobile ? '/mapamovil.svg' : '/mapapc.svg';
    
    // Crear modal para mostrar el plano ampliado
    const modal = document.createElement('div');
    modal.className = 'fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 p-4';
    modal.innerHTML = `
      <div class="relative bg-white rounded-2xl max-w-6xl max-h-full overflow-auto">
        <button id="close-modal" class="absolute top-4 right-4 bg-red-500 hover:bg-red-600 text-white rounded-full w-8 h-8 flex items-center justify-center z-10">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
        <img src="${mapUrl}" alt="Plano ampliado" class="w-full h-auto">
      </div>
    `;
    
    document.body.appendChild(modal);
    
    // Cerrar modal
    document.getElementById('close-modal')?.addEventListener('click', function() {
      document.body.removeChild(modal);
    });
    
    // Cerrar con click en el fondo
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        document.body.removeChild(modal);
      }
    });
  });

  // Funcionalidad para compartir plano
  document.getElementById('share-map')?.addEventListener('click', function() {
    const isMobile = window.innerWidth < 768;
    const mapUrl = window.location.origin + (isMobile ? '/mapamovil.svg' : '/mapapc.svg');
    const shareText = 'Plano del evento ¡Ven y Celebra! - Colegio Mariscal Cáceres';
    
    if (navigator.share) {
      // API Web Share para móviles
      navigator.share({
        title: shareText,
        text: shareText,
        url: mapUrl
      });
    } else {
      // Fallback: copiar URL al portapapeles
      navigator.clipboard.writeText(mapUrl).then(function() {
        // Mostrar mensaje de confirmación
        const button = document.getElementById('share-map');
        const originalText = button?.innerHTML;
        if (button) {
          button.innerHTML = `
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            ¡Enlace Copiado!
          `;
          
          setTimeout(() => {
            button.innerHTML = originalText || '';
          }, 2500);
        }
      });
    }
  });
</script>