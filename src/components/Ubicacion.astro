---
const nombre = 'Colegio Apostol Pablo Ayacucho Huamanga';
const direccion = 'Jr. 28 de Julio 456, Ayacucho, Perú';
---

<section class="w-full bg-white py-20 px-4 flex flex-col items-center">
  <div class="max-w-5xl w-full grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
    <!-- Mockup móvil con mapa -->
    <div class="flex justify-center">
      <div class="w-[320px] h-[640px] bg-neutral-900 rounded-3xl shadow-2xl flex flex-col items-center justify-start p-4 relative">
        <div class="w-24 h-2 bg-neutral-300 rounded-full absolute top-3 left-1/2 -translate-x-1/2"></div>
        <div class="w-full h-full mt-8 rounded-2xl overflow-hidden border border-blue-100 shadow-lg flex-1">
          <iframe class="w-full h-full" frameborder="0" style="border:0" src="https://www.google.com/maps?q=Jr.+28+de+Julio+456,+Ayacucho,+Peru&output=embed" allowfullscreen></iframe>
        </div>
      </div>
    </div>
    <!-- Bloque de texto -->
    <div class="flex flex-col items-start">
      <span class="text-sm text-blue-900 font-semibold tracking-widest uppercase mb-2">Ubicación</span>
      <h2 class="text-3xl md:text-4xl font-extrabold text-blue-900 mb-2">{nombre}</h2>
      <div class="w-16 h-1 bg-blue-900 mb-4"></div>
      <div class="flex items-center gap-3 mb-6">
        <svg class="w-6 h-6 text-blue-900" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 21c-4.418 0-8-5.373-8-10a8 8 0 1 1 16 0c0 4.627-3.582 10-8 10zm0-7a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/></svg>
        <span class="text-lg text-blue-900 font-medium">{direccion}</span>
      </div>
    </div>
  </div>
</section>
