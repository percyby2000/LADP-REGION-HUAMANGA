---
const members = [
  {
    name: 'PR. ULDARICO VILLANTOY LOLAY',
    role: 'PRESIDENTE',
    img: '/jer2.jpg',
  },
  {
    name: 'PRA. JUANA REGINA MALLQUI ASTO',
    role: 'VICEPRESIDENTA',
    img: '/jer1.jpg',
  },
  {
    name: 'PR. ALFREDO ESPINOZA NUÑES',
    role: 'SECRETARIO',
    img: '/jer3.jpg',
  },
  {
    name: 'PRA. MARTHA GUTIÉRREZ DE ANAYA',
    role: 'TESORERA',
    img: '/jer4.jpg',
  },
];
---

<section class="w-full bg-white py-16 px-4">
  <div class="max-w-6xl mx-auto">
    
    <!-- Título y descripción -->
    <div class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">
        JUNTA EJECUTIVA REGIONAL
      </h1>
      <p class="text-lg text-blue-600 font-semibold mb-6">
        PERIODO 2024 - 2027
      </p>
      <div class="w-24 h-1 bg-blue-600 mx-auto mb-6"></div>
      <p class="text-gray-600 text-base max-w-4xl mx-auto leading-relaxed">
        La Junta Ejecutiva Regional de Las Asambleas de Dios - Región Huamanga es el ente encargado de guiar y supervisar las actividades ministeriales, 
        promoviendo el crecimiento espiritual y la cohesión de la institución a través de decisiones estratégicas y colaborativas.
      </p>
    </div>

    <!-- Grid de miembros -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {members.map((member) => (
        <div class="bg-white border border-gray-200 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
          
          <!-- Imagen -->
          <div class="w-full h-80 bg-gray-100">
            <img 
              src={member.img} 
              alt={member.name} 
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          
          <!-- Información -->
          <div class="p-6 text-center">
            <!-- Cargo -->
            <div class="inline-block bg-blue-600 text-white px-4 py-1 rounded text-sm font-semibold mb-3">
              {member.role}
            </div>
            
            <!-- Nombre -->
            <h3 class="text-base font-bold text-gray-900 leading-tight">
              {member.name}
            </h3>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
