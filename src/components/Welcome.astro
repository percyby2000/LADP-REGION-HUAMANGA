---
import heroImg from '../assets/2.jpeg';

---

<section class="relative w-full h-screen min-h-[600px] sm:min-h-[700px] flex items-center justify-center overflow-hidden">
  <!-- Imagen de fondo con parallax -->
  <div class="absolute inset-0 z-0">
    <img 
      src={heroImg.src} 
      alt="Aniversario 106 Las Asambleas de Dios - Región Huamanga" 
      class="w-full h-full object-cover object-center scale-110 transition-transform duration-[20s] ease-out hover:scale-105"
    />
  </div>
  
  <!-- Overlay mejorado con gradientes más suaves -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/50 to-black/70 z-10"></div>
  <div class="absolute inset-0 bg-gradient-to-br from-blue-900/40 via-purple-900/20 to-orange-800/30 z-10"></div>
  
  <!-- Elementos decorativos mejorados -->
  <div class="absolute top-16 left-6 sm:top-20 sm:left-10 w-24 h-24 sm:w-32 sm:h-32 bg-yellow-400/15 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-16 right-8 sm:bottom-20 sm:right-16 w-36 h-36 sm:w-48 sm:h-48 bg-orange-500/15 rounded-full blur-3xl animate-pulse delay-1000"></div>
  <div class="absolute top-1/4 right-1/4 w-20 h-20 sm:w-24 sm:h-24 bg-white/8 rounded-full blur-2xl animate-pulse delay-500"></div>
  
  <!-- Contenido principal optimizado -->
  <div class="relative z-20 text-center px-4 sm:px-6 lg:px-8 max-w-6xl mx-auto">
    

    
    <!-- Número de aniversario destacado -->
    <div class="mb-4 animate-fade-in-up delay-200">
      <div class="relative inline-block">
        <span class="block text-6xl sm:text-7xl md:text-8xl lg:text-9xl xl:text-[10rem] font-black text-transparent bg-clip-text bg-gradient-to-r from-yellow-300 via-orange-400 to-red-500 drop-shadow-2xl leading-none">
          106
        </span>
        <div class="absolute -top-2 -right-2 sm:-top-4 sm:-right-4">
          <span class="text-2xl sm:text-3xl md:text-4xl font-bold text-yellow-300">°</span>
        </div>
      </div>
    </div>
    
    <!-- Texto ANIVERSARIO -->
    <h1 class="mb-6 animate-fade-in-up delay-400">
  <span class="block text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-white leading-tight drop-shadow-2xl tracking-wide" style="font-family: 'Pathway Gothic One', sans-serif;">
        FIESTA NACIONAL
      </span>
    </h1>
        
        <div class="animate-fade-in-up delay-1200 flex items-center justify-center">
          <div id="countdown-calendar" class="flex flex-col items-center justify-center gap-2 bg-gradient-to-br from-yellow-200/40 via-orange-400/30 to-red-500/40 backdrop-blur-xl text-white px-6 py-6 shadow-2xl min-w-[280px] max-w-lg mx-auto">
            <div class="flex items-center gap-2 mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-7 h-7 text-yellow-300 animate-pulse">
                <rect x="3" y="5" width="18" height="16" rx="4" fill="#fff2" stroke="#fbbf24" stroke-width="2"/>
                <rect x="7" y="9" width="10" height="8" rx="2" fill="#fff4" stroke="#fb923c" stroke-width="1.5"/>
                <path stroke-linecap="round" stroke-linejoin="round" d="M7 5V3m10 2V3" stroke="#ef4444" stroke-width="2"/>
              </svg>
              <span class="font-extrabold text-lg sm:text-xl tracking-wide drop-shadow-lg">Cuenta regresiva</span>
            </div>
            <div class="flex gap-3 sm:gap-4 justify-center" id="countdown-blocks">
              <div class="flex flex-col items-center bg-gradient-to-b from-yellow-300/60 to-orange-400/40 px-3 py-2 shadow-lg">
                <span id="cd-days" class="text-2xl sm:text-3xl font-extrabold font-mono drop-shadow-xl">00</span>
                <span class="text-xs sm:text-sm font-semibold text-yellow-200">Días</span>
              </div>
              <div class="flex flex-col items-center bg-gradient-to-b from-orange-400/60 to-red-400/40 px-3 py-2 shadow-lg">
                <span id="cd-hours" class="text-2xl sm:text-3xl font-extrabold font-mono drop-shadow-xl">00</span>
                <span class="text-xs sm:text-sm font-semibold text-orange-200">Horas</span>
              </div>
              <div class="flex flex-col items-center bg-gradient-to-b from-red-400/60 to-yellow-300/40 px-3 py-2 shadow-lg">
                <span id="cd-minutes" class="text-2xl sm:text-3xl font-extrabold font-mono drop-shadow-xl">00</span>
                <span class="text-xs sm:text-sm font-semibold text-red-200">Min</span>
              </div>
              <div class="flex flex-col items-center bg-gradient-to-b from-yellow-300/60 to-orange-400/40 px-3 py-2 shadow-lg">
                <span id="cd-seconds" class="text-2xl sm:text-3xl font-extrabold font-mono drop-shadow-xl">00</span>
                <span class="text-xs sm:text-sm font-semibold text-yellow-200">Seg</span>
              </div>
            </div>
            <span id="cd-message" class="mt-2 text-base font-bold text-orange-300"></span>
          </div>
        </div>
    
    <!-- Fechas destacadas -->
    <div class="mb-8 sm:mb-12 animate-fade-in-up delay-800">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-6">
        <div class="flex items-center gap-2 text-orange-300">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 sm:w-6 sm:h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5a2.25 2.25 0 002.25-2.25m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5a2.25 2.25 0 002.25 2.25v7.5" />
          </svg>
          <span class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold">17</span>
          <span class="text-lg sm:text-xl md:text-2xl font-semibold">al</span>
          <span class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold">19</span>
        </div>
        <div class="text-orange-200">
          <span class="block text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold">OCTUBRE</span>
          <span class="block text-sm sm:text-base md:text-lg font-medium opacity-90">2025</span>
        </div>
      </div>
    </div>
    

      
      <!-- Indicador de scroll mejorado -->
      <div class="mt-12 sm:mt-16 animate-bounce">
        <div class="flex flex-col items-center text-white/70 hover:text-white transition-colors cursor-pointer">
          <span class="text-xs sm:text-sm font-medium mb-2">Conoce más detalles</span>
          <div class="w-8 h-8 border-2 border-white/50 rounded-full flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
            </svg>
          </div>
        </div>
      </div>
  </div>
  
  <!-- Elementos flotantes mejorados -->
  <div class="absolute inset-0 overflow-hidden z-15 pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-yellow-400 rounded-full opacity-70 animate-float"></div>
    <div class="absolute top-1/3 right-1/3 w-1 h-1 bg-orange-300 rounded-full opacity-60 animate-float delay-1000"></div>
    <div class="absolute bottom-1/4 left-1/3 w-3 h-3 bg-white rounded-full opacity-40 animate-float delay-2000"></div>
    <div class="absolute top-1/2 left-1/6 w-1 h-1 bg-yellow-300 rounded-full opacity-80 animate-float delay-1500"></div>
    <div class="absolute bottom-1/3 right-1/4 w-2 h-2 bg-orange-400 rounded-full opacity-50 animate-float delay-500"></div>
    <div class="absolute top-3/4 left-1/2 w-1 h-1 bg-red-400 rounded-full opacity-60 animate-float delay-2500"></div>
  </div>
  
  <!-- Decoración de esquinas -->
  <div class="absolute top-4 left-4 w-12 h-12 border-l-2 border-t-2 border-yellow-400/30 rounded-tl-lg"></div>
  <div class="absolute top-4 right-4 w-12 h-12 border-r-2 border-t-2 border-orange-400/30 rounded-tr-lg"></div>
  <div class="absolute bottom-4 left-4 w-12 h-12 border-l-2 border-b-2 border-yellow-400/30 rounded-bl-lg"></div>
  <div class="absolute bottom-4 right-4 w-12 h-12 border-r-2 border-b-2 border-orange-400/30 rounded-br-lg"></div>
</section>

<style>
  /* Animaciones personalizadas mejoradas */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(40px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-25px) rotate(180deg);
    }
  }
  
  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 0 20px rgba(251, 191, 36, 0.3);
    }
    50% {
      box-shadow: 0 0 40px rgba(251, 191, 36, 0.6);
    }
  }
  
  .animate-fade-in-up {
    animation: fade-in-up 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
    opacity: 0;
  }
  
  .animate-fade-in-up.delay-200 {
    animation-delay: 0.2s;
  }
  
  .animate-fade-in-up.delay-400 {
    animation-delay: 0.4s;
  }
  
  .animate-fade-in-up.delay-600 {
    animation-delay: 0.6s;
  }
  
  .animate-fade-in-up.delay-800 {
    animation-delay: 0.8s;
  }
  
  .animate-fade-in-up.delay-1000 {
    animation-delay: 1s;
  }
  
  .animate-fade-in-up.delay-1200 {
    animation-delay: 1.2s;
  }
  
  .animate-float {
    animation: float 4s ease-in-out infinite;
  }
  
  .delay-500 {
    animation-delay: 0.5s;
  }
  
  .delay-1000 {
    animation-delay: 1s;
  }
  
  .delay-1500 {
    animation-delay: 1.5s;
  }
  
  .delay-2000 {
    animation-delay: 2s;
  }
  
  .delay-2500 {
    animation-delay: 2.5s;
  }
  
  /* Mejoras responsive específicas */
  @media (max-width: 640px) {
    .bg-clip-text {
      font-size: 4rem;
      line-height: 0.9;
    }
  }
  
  @media (max-width: 480px) {
    .bg-clip-text {
      font-size: 3.5rem;
    }
  }
  
  /* Efecto parallax optimizado */
  @media (prefers-reduced-motion: no-preference) {
    section {
      background-attachment: fixed;
    }
  }
  
  /* Mejoras de rendimiento */
  section {
    will-change: transform;
  }
  
  img {
    will-change: transform;
  }
  
  /* Glassmorphism mejorado */
  .backdrop-blur-md {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }
  
  /* Scroll smooth para el indicador */
  html {
    scroll-behavior: smooth;
  }
  
  /* Hover effects personalizados */
  button:hover {
    transform: translateY(-2px);
  }
  /* Estilos para la cuenta regresiva */
  #countdown-calendar {
    font-variant-numeric: tabular-nums;
    justify-content: center;
    box-shadow: 0 4px 20px 0 rgba(255, 140, 0, 0.2);
    transition: box-shadow 0.3s;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }
  #countdown-blocks > div {
    min-width: 50px;
    min-height: 60px;
    text-align: center;
    box-shadow: 0 2px 8px 0 rgba(255, 140, 0, 0.15);
    backdrop-filter: blur(8px);
  }
  #countdown-blocks span {
    font-family: 'Pathway Gothic One', 'League Gothic Variable', 'Montserrat', Arial, sans-serif;
    letter-spacing: 0.08em;
  }
  #cd-message {
    font-size: 1rem;
    font-weight: 700;
    text-shadow: 0 2px 8px rgba(251,191,36,0.3);
    display: block;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Efecto parallax suave en scroll
    const hero = document.querySelector('section');
    const heroImg = hero?.querySelector('img');
    
    if (hero && heroImg) {
      let ticking = false;
      
      function updateParallax() {
        const scrolled = window.pageYOffset;
        const rate = scrolled * -0.3;
        
        if (heroImg) {
          heroImg.style.transform = `translate3d(0, ${rate}px, 0) scale(1.1)`;
        }
        
        ticking = false;
      }
      
      function requestTick() {
        if (!ticking && window.innerWidth > 768) {
          requestAnimationFrame(updateParallax);
          ticking = true;
        }
      }
      
      window.addEventListener('scroll', requestTick, { passive: true });
    }
    
    // Smooth scroll para el indicador
    const scrollIndicator = hero?.querySelector('.animate-bounce');
    scrollIndicator?.addEventListener('click', () => {
      const nextSection = hero?.nextElementSibling;
      if (nextSection) {
        nextSection.scrollIntoView({ behavior: 'smooth' });
      }
    });
    
    // Animación de contador para el número 106
    const counterElement = document.querySelector('.bg-clip-text');
    if (counterElement) {
      let start = 0;
      const end = 106;
      const duration = 2000;
      const increment = end / (duration / 16);
      
      function updateCounter() {
        start += increment;
        if (start < end) {
          if (counterElement) {
            counterElement.textContent = Math.floor(start).toString();
          }
          requestAnimationFrame(updateCounter);
        } else {
          if (counterElement) {
            counterElement.textContent = end.toString();
          }
        }
      }
      
      // Iniciar contador después de 1 segundo
      setTimeout(updateCounter, 1000);
    }
  });
  // Cuenta regresiva tipo calendario
  function updateCountdownCalendar() {
    const targetDate = new Date('2025-10-17T18:00:00-05:00');
    const now = new Date();
    const diff = targetDate.getTime() - now.getTime();
    const daysEl = document.getElementById('cd-days');
    const hoursEl = document.getElementById('cd-hours');
    const minutesEl = document.getElementById('cd-minutes');
    const secondsEl = document.getElementById('cd-seconds');
    const msgEl = document.getElementById('cd-message');
    const calendarEl = document.getElementById('countdown-calendar');
    
    if (diff > 0 && daysEl && hoursEl && minutesEl && secondsEl && msgEl) {
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
      const minutes = Math.floor((diff / (1000 * 60)) % 60);
      const seconds = Math.floor((diff / 1000) % 60);
      
      daysEl.textContent = days.toString().padStart(2, '0');
      hoursEl.textContent = hours.toString().padStart(2, '0');
      minutesEl.textContent = minutes.toString().padStart(2, '0');
      secondsEl.textContent = seconds.toString().padStart(2, '0');
      msgEl.textContent = '';
      
      // Ocultar botón de live si existe
      const liveBtn = document.getElementById('live-btn');
      if (liveBtn) {
        liveBtn.style.display = 'none';
      }
    } else if (msgEl && calendarEl) {
      msgEl.textContent = '';
      if (daysEl) daysEl.textContent = '00';
      if (hoursEl) hoursEl.textContent = '00';
      if (minutesEl) minutesEl.textContent = '00';
      if (secondsEl) secondsEl.textContent = '00';

    }
  }
  
  setInterval(updateCountdownCalendar, 1000);
  updateCountdownCalendar();
</script>